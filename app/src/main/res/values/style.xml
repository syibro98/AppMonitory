<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.Monitory.Title">
        <item name="android:textColor">@color/black3</item>
        <item name="android:fontFamily">@font/nunito_bold</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/size_title</item>
    </style>

    <style name="Theme.Monitory.BigTitle" parent="Theme.Monitory.Title">
        <item name="fontFamily">@font/rubik_regular</item>
    </style>

    <style name="Theme.Monitory.TextBase">
        <item name="android:textSize">@dimen/size_base</item>
        <item name="android:textColor">@color/black3</item>
        <item name="android:fontFamily">@font/rubik_regular</item>
    </style>

    <style name="Theme.Monitory.Button" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/rubik_regular</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>